<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="PreviousButton">
        <Grid HorizontalAlignment="Center"
              Margin="0,0,0,0">
            <Image x:Name="PreviousButtonActive"
                   Source="/Assets/Images/previous-button-active.png"
                   Stretch="Fill"
                   Height="52"
                   Width="115"
                   Visibility="Visible">
            </Image>
            <Image x:Name="PreviousButtonOver"
                   Source="/Assets/Images/previous-button-over.png"
                   Stretch="Fill"
                   Height="52"
                   Width="115"
                   Visibility="Collapsed">
            </Image>
            <Image x:Name="PreviousButtonPressed"
                   Source="/Assets/Images/previous-button-pressed.png"
                   Stretch="Fill"
                   Height="52"
                   Width="115"
                   Visibility="Collapsed">
            </Image>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="Button.IsMouseOver" Value="True">
                <Setter TargetName="PreviousButtonOver" Property="Visibility" Value="Visible" />
                <Setter TargetName="PreviousButtonActive" Property="Visibility" Value="Collapsed" />
            </Trigger>
            <Trigger Property="Button.IsPressed" Value="True">
                <Setter TargetName="PreviousButtonPressed" Property="Visibility" Value="Visible" />
                <Setter TargetName="PreviousButtonOver" Property="Visibility" Value="Collapsed" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

